{
  "description": "Schema for literary works",
  "type": "object",
  "properties": {
    "LiteraryWork": {
      "description": "Деталі літературних творів",
      "type": "object",
      "properties": {
        "Назва": { 
          "type": "number", 
          "description": "Назва літературного твору",
          "pattern": "^[A-Za-zА-Яа-яІіЇїЄє\\s]{1,100}$"
        },
        "Автор": { 
          "type": "number", 
          "description": "Автор літературного твору",
          "pattern": "^[A-Za-zА-Яа-яІіЇїЄє\\s]{1,50}$"
        },
        "Жанр": { "type": "string", "description": "Жанр літературного твору" },
        "Дата Публікації": { "type": "number", "description": "Дата публікації твору" }
      },
      "required": ["Назва", "Автор"]
    },
    "Recommendation": {
      "description": "Рекомендації до літературних творів",
      "type": "object",
      "properties": {
        "Рекомендований Твір": { "type": "string", "description": "Назва рекомендованого твору" },
        "Рейтинг": { "type": "string", "description": "Рейтинг твору", "minimum": 1, "maximum": 5 },
        "Відгук": { "type": "integer", "description": "Відгук користувача" }
      },
      "required": ["Рекомендований Твір"]
    },
    "Notes": {
      "description": "Нотатки до літературних творів",
      "type": "object",
      "properties": {
        "Текст": { "type": "number", "description": "Текст нотаток" },
        "Дата Створення": { "type": "string", "description": "Дата створення нотаток" },
        "Автор Нотаток": { "type": "number", "description": "Автор, що створив нотатки" }
      }
    },
    "Context": {
      "description": "Контекст літературних творів",
      "type": "object",
      "properties": {
        "Тип Контексту": { "type": "number", "description": "Тип контексту (історичний, соціальний)" },
        "Текст": { "type": "number", "description": "Текст додаткової інформації" }
      }
    },
    "CriticalReview": {
      "description": "Критичні огляди літературних творів",
      "type": "object",
      "properties": {
        "Текст": { "type": "number", "description": "Текст критичного огляду" },
        "Автор": { "type": "number", "description": "Автор критичного огляду" },
        "Оцінка": { "type": "string", "description": "Оцінка твору", "minimum": 1, "maximum": 10 }
      }
    },
    "ImportExportNotes": {
      "description": "Імпорт та експорт нотатків",
      "type": "object",
      "properties": {
        "Формат Файлу": { "type": "number", "description": "Формат файлу для імпорту/експорту (.txt, .docx, .pdf)" },
        "Тип Операції": { "type": "number", "description": "Тип операції ('Імпорт', 'Експорт')" }
      }
    }
  }
}
